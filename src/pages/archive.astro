---
import { getCollection } from 'astro:content';
import '../styles/globals.css';
import { ArchivePage } from '../components/ArchivePage';
import SiteHead from '../components/SiteHead.astro';

const articles = (await getCollection('articles')).map(entry => {
  const id = entry.data.id?.toString() || entry.slug;
  return {
    id,
    title: entry.data.title,
    image: entry.data.image,
    tags: Array.isArray(entry.data.tags) ? entry.data.tags : (entry.data.tags ? [entry.data.tags] : []),
    date: entry.data.date,
    body: entry.body,
    slug: id,
  };
});

const initialTag = Astro.url.searchParams.get('tag') ? decodeURIComponent(Astro.url.searchParams.get('tag')!) : '';
---

<html lang="en" class="">
  <head>
    <SiteHead title="Архив" />
  </head>
  <body class="bg-lightbg dark:bg-darkbg transition-colors">
    <ArchivePage client:load articles={articles} initialTag={initialTag} />
  </body>
</html>
