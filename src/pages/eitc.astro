---
import '../styles/globals.css';
import SiteHead from '../components/SiteHead.astro';
import { EITC } from '../components/eitc';
import { getTranslations, defaultLocale } from '../i18n/translations';

const locale = defaultLocale; // Root page is always default locale (ru)
const t = getTranslations(locale as 'ru' | 'lv' | 'en');
const title = t.eitcPageTitle;
---

<html lang={locale} class="">
  <head>
    <SiteHead title={title} />
  </head>
  <body class="bg-lightbg dark:bg-darkbg text-lightfg dark:text-darkfg transition-colors">
    <EITC 
      client:load
      locale={locale}
      translations={t}
      currentPath="/eitc"
    />
  </body>
</html>
